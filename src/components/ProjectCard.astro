---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<a
  id="card"
  href={`/${image}`}
  style={{
    backgroundImage: `linear-gradient(to bottom, hsla(0, 0%, 100%, 0.05), hsla(0, 0%, 0%)),url(${image}.jpg)`,
  }}
>
  <div>
    <h3>{title}</h3>
    <p>{description.slice(0, 60)} ...</p>
  </div>
</a>

<style>
  #card {
    display: flex;
    flex-direction: column;
    background-image: linear-gradient(
      to bottom,
      hsla(0, 0%, 100%, 0.05),
      hsla(0, 0%, 0%)
    );
    background-size: cover;
    background-position: center; /* Centra la imagen de fondo */
    transition: all 0.3s ease-in-out;
    text-decoration: none;
    color: inherit;
    background-color: black;
    height: 200px; /* Ajusta la altura según tus preferencias */
    width: 100%; /* Ajusta el ancho al 100% del contenedor */
    max-width: 240px; /* Establece un ancho máximo para el card */
    margin: 20px;
  }

  #card:hover {
    transform: scale(1.05);
  }

  #card div {
    padding: 15px;
    flex-grow: 1;
    display: flex; /* Alinea los elementos secundarios en columna */
    flex-direction: column;
    justify-content: flex-end; /* Alinea el contenido en la parte inferior */
  }

  #card h3 {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 100%;
    color: white;
  }

  #card p {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: white;
  }
</style>
