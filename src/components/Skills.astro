<style>
  .skills {
    display: flex;
    flex-direction: column;
    gap: 50px;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid rgb(30, 30, 30, 0.3);
    padding: 0px 20px 100px 20px;
  }

  .skills > section {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    justify-content: center;
  }
  .skill-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 260px;
    min-height: 210px;
    background-color: #1e1e1e;
    border-radius: 10px;
    color: #fff;
    padding: 20px;
  }

  .skill-card > img {
    text-align: center;
    width: 50px;
  }

  .skill-card > h3 {
    font-size: 20px;
    font-weight: 400;
  }
  .skill-card > p {
    font-weight: 100;
    font-size: 14px;
  }
</style>
