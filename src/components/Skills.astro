import Title from "../components/Title.astro";
---

<section class="skills">
  <Title text="Habilidades y TecnologÃ­as" />
  <section>
    <article class="skill-card">
      <img src="/icons8-devops-60.png" alt="card icon" />
      <h3>DevOps</h3>
      <p>Automating processes with Python and its different libraries</p>
    </article>
    <article class="skill-card">
      <img src="/icons8-backend-60.png" alt="card icon" />
      <h3>Desarrollo Backend</h3>
      <p>
        Databases like PostgreSQL and MongoDB. Developing APIs with JavaScript
        and Python
      </p>
    </article>
    <article class="skill-card">
      <img src="/icons8-web-design-60.png" alt="card icon" />
      <h3>Desarrollo Frontend</h3>
      <p>
